<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/item_bg"
        android:padding="7dip" >

        <!-- com.interestfriend.view.RoundAngleImageView -->

        <com.biyanzhi.view.RoundAngleImageView
            android:id="@+id/img_avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginRight="4dip"
            android:src="@drawable/picture_default_head" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="4dip"
            android:layout_toRightOf="@+id/img_avatar"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/pciture_text"
            android:textSize="16sp" />

        <!-- <RatingBar -->
        <!-- android:id="@+id/ratingbar" -->
        <!-- style="@style/roomRatingBar_small" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_below="@+id/txt_user_name" -->
        <!-- android:layout_gravity="center" -->
        <!-- android:layout_marginTop="5dip" -->
        <!-- android:layout_toRightOf="@+id/img_avatar" -->
        <!-- android:isIndicator="true" -->
        <!-- android:numStars="5" -->
        <!-- android:stepSize="0.1" > -->
        <!-- </RatingBar> -->

        <com.biyanzhi.view.FlexibleSmallRatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_name"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/img_avatar"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            app:colorFillOff="#dddddd"
            app:colorFillOn="#fb4a83"
            app:colorFillPressedOff="#dddddd"
            app:colorFillPressedOn="#fb4a83"
            app:colorOutlineOff="@android:color/transparent"
            app:colorOutlineOn="@android:color/transparent"
            app:colorOutlinePressed="@android:color/transparent" />

        <TextView
            android:id="@+id/txt_play_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/titleBarBackGround"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>