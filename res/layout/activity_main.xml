<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp104"
        android:background="@color/titleBarBackGround" >

        <com.biyanzhi.view.CircularImage
            android:id="@+id/img_avatar"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp26" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:paddingLeft="31dip"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/scale42sp" />

        <ImageView
            android:id="@+id/img_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_avatar"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_marginLeft="25dp"
            android:src="@drawable/prompt" />
    </RelativeLayout>

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rotate_header_grid_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7" >

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="8dip"
            android:listSelector="#00000000"
            android:numColumns="2"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:scrollbars="none" >
        </GridView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    <ImageView
        android:id="@+id/img_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/icon_create_scene" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pulldown_footer_loading"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:indeterminateDrawable="@drawable/iamge_progress" />

        <TextView
            android:id="@+id/pulldown_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="加载更多中"
            android:textColor="#c8313131"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>