<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp104"
        android:background="@color/titleBarBackGround" >

        <com.biyanzhi.view.CircularImage
            android:id="@+id/img_avatar"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp26"
            android:layout_marginRight="@dimen/dp26" />
        <!-- android:layout_marginLeft="60dip" -->
        <!-- android:layout_marginRight="60dip" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp26"
            android:layout_toRightOf="@+id/img_avatar"
            android:background="@drawable/tab_bg"
            android:padding="2.0dip" >

            <TextView
                android:id="@+id/btn_biyanzhi"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:singleLine="true"
                android:text="比颜值"
                android:textColor="@color/titleBarBackGround"
                android:textSize="16sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/btn_yanzhibang"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/titleBarBackGround"
                android:gravity="center"
                android:singleLine="true"
                android:text="颜值榜"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/btn_pk"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/titleBarBackGround"
                android:gravity="center"
                android:singleLine="true"
                android:text="PK大厅"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_shai"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/titleBarBackGround"
                android:gravity="center"
                android:singleLine="true"
                android:text="晒晒"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_avatar"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_marginLeft="25dp"
            android:src="@drawable/prompt" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/img_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/icon_create_scene" />

</RelativeLayout>